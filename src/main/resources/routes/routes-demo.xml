

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://camel.apache.org/schema/spring"
    xsi:schemaLocation="http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd ">

    <route id="HelloRequest">
        <from uri="activemq:queue:phucFrom" />
        <process ref="helloRequestProcess" />
        <process ref="helloRequestProcess2" />
<!--        <to uri="sql:select * from tutorials"/>-->
        <to uri="sql:classpath:sql/GetTutorialSQL.sql" />
        <process ref="helloRequestProcess3" />
        <to uri="activemq:queue:phucTo2" />
    </route>

    <route id="MSSQLGetAllRequest">
        <from uri="activemq:queue:FromMSSQLGetAll" />
        <to uri="sql:select * from tutorials"/>
        <process ref="MSSQLGetAllProcessor" />
    </route>
    <route id="MSSQLCreateOneRequest">
        <from uri="activemq:queue:FromMSSQLCreateOneObject" />
        <process ref="MSSQLCreateOneRequestProcessor" />
        <to uri="sql:insert into tutorials(description, published, title) values (:#description, :#published, :#title)" />
        <process ref="MSSQLCreateOneResponseProcessor" />
    </route>
    <route id="MSSQLCreateMultipleRequest">
        <from uri="activemq:queue:FromMSSQLCreateMultipleObject" />
        <process ref="MSSQLCreateByListObjectRequestProcessor" />
        <split>
            <simple>${body}</simple>
            <to uri="sql:insert into tutorials(description, published, title) values (:#description, :#published, :#title)" />
        </split>
        <process ref="MSSQLCreateByListObjectResponseProcessor" />
    </route>
    <route id="MSSQLUpdateOneRequest">
        <from uri="activemq:queue:FromMSSQLUpdateOneObject" />
        <process ref="MSSQLUpdateOneRequestProcessor" />
        <to uri="sql:update tutorials set description = :#description, published = :#published, title = :#title where id = :#id" />
    </route>
</routes>